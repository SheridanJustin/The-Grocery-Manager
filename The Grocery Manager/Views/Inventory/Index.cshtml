@model List<The_Grocery_Manager.Models.Inventory>
@{
    ViewData["Title"] = "My Inventory";
    Layout = "_Layout";
}

<h2 class="mt-4 mb-4 text-center display-5">🧺 My Home Inventory</h2>

@if (Model != null && Model.Count > 0)
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card shadow-sm border-0 rounded-4 h-100">
                    <div class="card-body">
                        <h5 class="card-title fw-bold">
                            <i class="bi bi-box-seam me-2"></i> @item.ItemName
                        </h5>
                        <p class="card-text mb-2">
                            <span class="badge bg-primary fs-6">
                                <i class="bi bi-cup-straw me-1"></i> @item.Quantity @item.Unit
                            </span>
                        </p>
                        <p class="text-muted small mb-0">
                            <i class="bi bi-clock-history me-1"></i> Last Updated:
                            <span class="fw-semibold">@item.LastUpdated.ToString("f")</span>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-warning text-center mt-5">
        <i class="bi bi-exclamation-triangle-fill me-2"></i> You have no items in your inventory.
    </div>
}
