@model The_Grocery_Manager.Models.User
@{
    ViewData["Title"] = "Your Profile";
}

<h2>Your Profile</h2>

<div class="card mt-3">
    <div class="card-body">
        <h5 class="card-title">@Model.FullName</h5>
        <p class="card-text">
            <strong>Email:</strong> @Model.Email<br />
            <strong>Registered On:</strong> @Model.RegisteredOn.ToString("MMMM dd, yyyy")
        </p>
    </div>
</div>

<a asp-action="Dashboard" class="btn btn-primary mt-3">Back to Dashboard</a>
